<?xml version='1.0' encoding='utf-8'?>

<widget id="org.bukman.pyro" version="1.0.0" xmlns="http://www.w3.org/ns/widgets" xmlns:gap="http://phonegap.com/ns/1.0">
    <name>Pyro</name>
    <description>Pyrometer</description>

    <author email="bukman@jermtechnology.com" href="http://www.jermtechnology.com">Bukman</author>
    <content src="index.html" />
    <preference name="DisallowOverscroll" value="true" />
    <preference name="android-minSdkVersion" value="14"/>
    
    <!-- use latest version of phonegap...this version is displayed in the phonegap web -->
    <preference name="phonegap-version" value="cli-6.5.0" />

    <allow-navigation href="*" />
    <access origin="*" />

    <allow-intent href="http://*/*" />
    <allow-intent href="https://*/*" />
    <allow-intent href="tel:*" />
    <allow-intent href="sms:*" />
    <allow-intent href="mailto:*" />
    <allow-intent href="geo:*" />
    <allow-intent href="market:*" />


    <icon src="data/icon.png" gap:role="default" />

    <plugin name="cordova-plugin-whitelist" />

    <!-- plugins to add custom permisions -->
    <gap:plugin name="org.apache.cordova.camera"/>

</widget>

